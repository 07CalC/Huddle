<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_set_password_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:tint="@color/text_main"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:text="Set a new password"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_main"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/sign_text"
        android:layout_height="wrap_content"
        android:text="Create a new password. Ensure it differs from previous one for security"
        android:textColor="@color/text_sec"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Password"
        android:layout_marginTop="32dp"
        android:textColor="@color/text_main"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emaillog_o"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Enter new password"
        android:textColorHint="@color/text_sec"
        android:layout_marginTop="6dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:hintTextColor="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:placeholderTextColor="@color/accent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/accent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_pass_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Confirm Password"
        android:layout_marginTop="32dp"
        android:textColor="@color/text_main"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Confirm password"
        android:textColorHint="@color/text_sec"
        android:layout_marginTop="6dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:hintTextColor="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:placeholderTextColor="@color/accent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/accent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirm_pass_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_sec" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_pass_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cornerRadius="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"
        android:text="Update password"
        android:textColor="@color/text_main"/>

</LinearLayout>